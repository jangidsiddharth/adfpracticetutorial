			"name": "[concat(parameters('factoryName'), '/BulkSqlServerTables')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "GetMetaDataSqlServerLinkedService",
