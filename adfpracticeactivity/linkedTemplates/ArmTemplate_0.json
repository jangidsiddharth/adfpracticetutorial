				"typeProperties": {
					"server": "[parameters('ParameterizedDataset_properties_typeProperties_server')]",
					"database": "[parameters('ParameterizedDataset_properties_typeProperties_database')]",
					"encrypt": "mandatory",
					"trustServerCertificate": false,
					"authenticationType": "SQL",
					"userName": "[parameters('ParameterizedDataset_properties_typeProperties_userName')]",
