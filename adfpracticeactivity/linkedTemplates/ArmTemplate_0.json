			"apiVersion": "2018-06-01",
			"properties": {
				"description": "sql table copy using parametized method",
				"annotations": [],
				"type": "AzureBlobStorage",
				"typeProperties": {
					"connectionString": "[parameters('TableCopyUsingParameterized_connectionString')]"
				}
			},
			"dependsOn": []
